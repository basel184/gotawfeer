# Nuxt.js on Hostinger Configuration
# This file helps with routing for Nuxt.js SSR

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Handle API routes
  RewriteCond %{REQUEST_URI} ^/api/
  RewriteRule ^api/(.*)$ /api/$1 [L]
  
  # Handle static files
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # For Nuxt.js SSR - redirect to Node.js server
  # This assumes Node.js app is running on a different port
  # Adjust according to your Hostinger setup
</IfModule>

